<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.naoyukik.ijtabmanagerex</id>
   <name>Tab Manager Ex</name>
    <vendor>naoyukik</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <actions>
        <!-- アクションの登録 -->
        <action id="OpenFilesFromSelectedCommitsAction"
                class="com.github.naoyukik.ijtabmanagerex.userInterface.OpenFilesFromSelectedCommitsAction"
                text="Open Changed Files"
                description="Open all modified files from selected commits.">
            <add-to-group group-id="Git.Log.ContextMenu" anchor="last" />
        </action>
        <group id="TabManager.Group" text="Tab Manager Ex" popup="true">
            <add-to-group group-id="EditorTabPopupMenu" anchor="last" />
            <add-to-group group-id="EditorPopupMenu" anchor="last" />
            <action id="PinCurrentFilesAction"
                    class="com.github.naoyukik.ijtabmanagerex.userInterface.PinCurrentFilesAction"
                    text="Pin All Open Files"
                    description="Pin all currently open files to the editor.">
            </action>
            <action id="UnPinAllAction"
                    class="com.github.naoyukik.ijtabmanagerex.userInterface.UnpinAllAction"
                    text="Remove All Pins"
                    description="Remove pin status from all currently open files in the editor.">
            </action>
        </group>
    </actions>
</idea-plugin>
